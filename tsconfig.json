{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "src/typings"],
    "types": ["webpack-env", "node"],
    "noImplicitAny": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
