{
  "compilerOptions": {
    "incremental": false,
    "composite": false,
    "target": "ESNext",
    "lib": ["ESNext"],
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["@types/node"],
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
